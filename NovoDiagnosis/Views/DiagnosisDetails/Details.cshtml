                            <tr><td><b>Appointment Time:</b></td><td>  @Html.DisplayFor(model => model.AppointmentTime)</td></tr>
                            <tr><td><b>Authorization Code: </b></td><td> @Html.DisplayFor(model => model.AuthorizationCode)</td></tr>
                            <tr>  <td><b>Hospital:</b> </td><td> @Html.DisplayFor(model => model.Provider)</td></tr>
                            <tr>
                                <td><b>You have been authorized for the following Medical Checks:</b></td>
                                <td>
                                    <ol>
                                        <li>Routine Clinic Examinations</li>
                                        <li> Physical Examination</li>
