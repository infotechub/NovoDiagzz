@model NovoDiagnosis.Models.DiagnosisDetails

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>


<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div>
                <h4 align="center">Annual Medical Check Appointment</h4>
                <h5 align="center">Kindly use the print button below to print Appointment Authorization</h5>
